{
    "name": "wwdtm-theme",
    "description": "wwdtm-theme",
    "author": {
        "name": "Linh Pham",
        "url": "https://linhpham.org/"
    },
    "license": "MIT",
    "private": true,
    "dependencies": {
        "@ibm/plex-mono": "^1.1.0",
        "@ibm/plex-sans": "^1.1.0"
    },
    "scripts": {
        "copy-css": "cp wwdtm-theme/dist/css/*.css app/static/css/",
        "copy-fonts": "cp -r node_modules/@ibm/plex-mono/fonts/* node_modules/@ibm/plex-sans/fonts/* app/static/fonts/",
        "copy-js": "cp wwdtm-theme/dist/js/*.js app/static/js/",
        "copy-all": "npm run copy-css && npm run copy-fonts && npm run copy-js"
    }
}
